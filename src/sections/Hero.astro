---
import SmokeBackground from "@/components/SmokeBackground.astro"
import Icon from "@/components/Icon.astro"
---

<section class="hero">
	<SmokeBackground/>
	<section class="slider">
		<ul class="slider__list">
			<li class="slide main-row">
				<div class="names">
					<h2 class="name left">yo soy <span class="main">plex</span></h2>
					<span class="versus">versus</span>
					<h2 class="name right">el <span class="main">mariana</span></h2>
				</div>
				<div class="boxer left">
					<img src="/images/yo-soy-plex.webp" alt="Yo Soy Plex">
				</div>
				<div class="boxer right">
					<img src="/images/el-mariana.webp" alt="El Mariana">
				</div>
			</li>
		</ul>
		<div class="slider__navigation">
			<div class="slider__navigation__content main-row">
				<hr>
				<button class="slider__navigation__button prev"><Icon name="arrow-prev" viewBox="0 0 32 50" width="32px" height="50px" fill="#fff" /></button>
				<div class="label">Sexto Combate</div>
				<button class="slider__navigation__button next"><Icon name="arrow-next" viewBox="0 0 32 50" width="32px" height="50px" fill="#fff" /></button>
			</div>
		</div>
	</section>
</section>

<style>
	.hero{
		height: 100vh;
		overflow: hidden;
		padding-top: 60px;
		position: relative;
	}

	.slider{
		position: relative;
	}

	.slider__navigation{
		bottom: 0;
		font-size: 14px;
		position: absolute;
		text-transform: uppercase;
		width: 100%;
		z-index: 12;
	}

	.slider__navigation__content{
		align-items: center;
		display: flex;
		gap: 40px;
		justify-content: center;
		position: relative;
	}

	.slider__navigation hr{
		background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 50%, rgba(255,255,255,0) 100%);
		border: none;
		height: 2px;
		left: 0;
		margin: 0;
		position: absolute;
		top: 0;
		width: 100%;
	}

	.slider__navigation__button{
		padding: 30px 100px;
		position: relative;
	}

	.slider__navigation__button::before{
        background: linear-gradient(0deg, rgba(255,255,255,0) 50%, rgba(255,255,255,0.1) 100%);
		content: '';
		left: 0;
		opacity: 0;
		position: absolute;
		height: 100%;
		top: 0;
        transition: all 0.3s ease-in-out;
		width: 100%;
	}

	.slider__navigation__button:hover::before{
		opacity: 1;
	}

	.label{
		left: 50%;
		margin-top: -4px;
		position: absolute;
		top: 50%;
		transform: translate(-50%, -50%);
	}

	.slide{
		display: flex;
		justify-content: space-between;
		padding: 0 60px;
		height: calc(100vh - 60px);
		position: relative;
	}

	.boxer{
		height: calc(100vh - 60px);
		max-width: 720px;
  		mask-image: linear-gradient(0deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.1) 10%, rgba(0,0,0,1) 40%);
	}

	.boxer img{
		filter: drop-shadow(0 0 30px rgba(0,0,0,0.5));
	}

	.names{
		align-items: center;
		bottom: 360px;
		font-family: 'Atomic';
		font-size: 3.2em;
		display: flex;
		justify-content: center;
		left: 50%;
		line-height: 1em;
		position: absolute;
		rotate: -8deg;
		transform: translateX(-50%);
		width: 100%;
		z-index: 2;
	}

	.name{
		color: var(--color-accent);
	}

	.main{
		font-size: 2em;
	}

	.name.left{
	}

	.name.right{
		margin: 0 0 -180px -200px;
	}

	.versus{
		display: block;
		padding: 0 10px;
	}
</style>
